# (fd) HACK !!!!!!!!
# ARCH = VENDOR + OS_TYPE + AUDIO_LIBRARY + PLATFORM 
# Quel bordel !

ifeq ($(PLATFORM),sgi)
ifeq ($(AUDIO_LIBRARY),sgial2)
ARCH_SOURCES = sgial2dev.c shmdev.c sfdev.c unixdev.c
else
ARCH_SOURCES = sgidev.c sfdev.c
endif
endif

ifeq ($(PLATFORM),linux-intel)
ARCH_SOURCES = ossdev.c unixdev.c sfdev.c
endif

ifeq ($(PLATFORM),linux-ppc)
ARCH_SOURCES = ossdev.c unixdev.c sfdev.c
endif

ifeq ($(OS_TYPE),solaris2)
ARCH_SOURCES = unixdev.c solaris2dev.c
endif

ifeq ($(PLATFORM),macosx)
ARCH_SOURCES = unixdev.c
endif


SOURCES = \
	  devconf.c \
	  devices.c \
	  profdev.c \
	  null.c    \
	  $(ARCH_SOURCES)




