ifeq ($(AUDIO_LIBRARY),sgial)
AUDIO_SOURCES = sgidev.c
endif

ifeq ($(AUDIO_LIBRARY),sgial2)
AUDIO_SOURCES = sgial2dev.c shmdev.c
endif

ifeq ($(AUDIO_LIBRARY),oss)
AUDIO_SOURCES = ossdev.c
endif

ifeq ($(OS_TYPE),unix)
OS_SOURCES = unixdev.c
endif

ifeq ($(OS_TYPE),solaris2)
	OS_SOURCES = unixdev.c 
	AUDIO_SOURCES = solaris2dev.c
endif

SOURCES = sfdev.c \
	  devconf.c \
	  devices.c \
	  profdev.c \
	  null.c    \
	  $(OS_SOURCES) \
	  $(AUDIO_SOURCES)




