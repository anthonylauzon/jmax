ifeq ($(VENDOR),sgi)
	ARCH_SOURCES = sgihw.c
endif

ifeq ($(VENDOR),gnu)
	ARCH_SOURCES = gnuhw.c
endif

ifeq ($(VENDOR),solaris2)
	ARCH_SOURCES = solaris2hw.c
endif

SOURCES = $(ARCH_SOURCES) \
	smem.c	          \
	mem.c	          \
	modules.c         \
	sys.c             \
	welcome.c




