# config/dist.def 
#
# Default setting values for the distribution. These settings assume a
# linuxpc machine.
#

# Tell the package handler this package is provided
provided-package         = jmax
name                     = jMax Package
version                  = 2.0.2
description              = The jMax package


# Host settings
arch                     = linuxpc
mode                     = opt
host-type                = linuxpc

# Server settings
server-name              = fts
server-path              = $(root)/fts/bin/$(arch)/$(mode)
host                     = local
connection               = udp
port                     = 2000

# Audio settings
audio-in                 = oss_adc
audio-out                = oss_dac
default-audio-in         = oss_adc
default-audio-out        = oss_dac
midi                     = oss_midi
default-midi             = oss_midi
sample-rate              = 44100
audio-buffer             = 2048

# The setting files to be loaded
settings                 : $(home)/.jmaxrc.def 
settings                 : $(dir)/config/$(host-type).def

# The package paths
sys-pkg-path             : $(root)/packages
sys-pkg-path             : $(root)/syspackages
pkg-path                 : $(root)/packages
pkg-path                 : $(root)/syspackages
pkg-path                 : $(home)/jmax

compatibility            = ispw

# The packages to be loaded
required-package         : guiobj
required-package         : system
required-package         : $(compatibility)math
required-package         : data
required-package         : control
required-package         : mess
required-package         : numeric
required-package         : lists
required-package         : ispw
required-package         : table
required-package         : qlist
required-package         : explode
required-package         : io

# The scripts to be loaded
script                   : $(dir)/scm/jmax.scm
script                   : $(home)/.jmaxrc.scm

# The classes to be loaded
classes                  : ircam.jmax.JMax

# Various server side settings
abstraction-path         : $(dir)/abs
abstraction-path         : $(home)/jmax/abs
template-path            : $(dir)/template
template-path            : $(user)/jmax/template
project-path             : $(home)/jmax
data-path                : $(dir)/data
data-path                : $(home)/jmax/data

# Various client side settings
image-root               = $(dir)/images
fast-file-box            = false
no-console               = false
no-register              = false
splash-screen            = show





