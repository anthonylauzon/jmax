ROOTDIR = ../../../..
PACKAGE_DIR = ircam/jmax

include $(ROOTDIR)/java/Makefiles/Makefile.common

all: local_all
	(cd editors ; $(MAKE) $@)
	(cd fts ; $(MAKE) $@)
	(cd mda ; $(MAKE) $@)
	(cd script ; $(MAKE) $@)
	(cd toolkit ; $(MAKE) $@)
	(cd utils ; $(MAKE) $@)
	(cd widgets ; $(MAKE) $@)
	(cd dialogs ; $(MAKE) $@)
.PHONY: all

local_all: MaxVersion.java $(CLASSES) 
.PHONY: local_all

MaxVersion.java: $(ROOTDIR)/VERSION
	echo '// DO NOT EDIT THIS FILE: it is generated automatically' > MaxVersion.java
	echo 'package ircam.jmax;' >> MaxVersion.java
	echo '' >> MaxVersion.java
	echo 'public class MaxVersion {' >> MaxVersion.java
	echo ' public static String getMaxVersion()' >> MaxVersion.java
	echo ' {' >> MaxVersion.java
	echo '  return "release' `cat $(ROOTDIR)/VERSION` '";' >> MaxVersion.java
	echo ' }' >> MaxVersion.java
	echo '}' >> MaxVersion.java

clean: local_clean
	(cd editors ; $(MAKE) $@)
	(cd fts ; $(MAKE) $@)
	(cd mda ; $(MAKE) $@)
	(cd script ; $(MAKE) $@)
	(cd toolkit ; $(MAKE) $@)
	(cd utils ; $(MAKE) $@)
	(cd widgets ; $(MAKE) $@)
	(cd dialogs ; $(MAKE) $@)
.PHONY: clean

include $(ROOTDIR)/java/Makefiles/Makefile.misc








