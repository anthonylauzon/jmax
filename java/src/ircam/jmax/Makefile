ROOTDIR = ../../../..
PACKAGE_DIR = ircam/jmax

include $(ROOTDIR)/java/Makefiles/Makefile.common

all: local_all
	(cd editors ; $(MAKE) all)
	(cd fts ; $(MAKE) all)
	(cd mda ; $(MAKE) all)
	(cd toolkit ; $(MAKE) all)
	(cd utils ; $(MAKE) all)
	(cd widgets ; $(MAKE) all)
	(cd script ; $(MAKE) all)
.PHONY: all

local_all: MaxVersion.java $(CLASSES) 
.PHONY: local_all

MaxVersion.java: $(ROOTDIR)/VERSION
	echo '// DO NOT EDIT THIS FILE: it is generated automatically' > MaxVersion.java
	echo 'package ircam.jmax;' >> MaxVersion.java
	echo '' >> MaxVersion.java
	echo 'public class MaxVersion {' >> MaxVersion.java
	echo ' public static String getMaxVersion()' >> MaxVersion.java
	echo ' {' >> MaxVersion.java
	awk -F= '\
$$1=="MAJOR" {ma=$$2;} \
$$1=="MINOR" {mi=$$2;} \
$$1=="PATCH_LEVEL" {pa=$$2;} \
$$1=="SNAPSHOT"  {sn=$$2;} \
END { printf( "  return \"jMax version %d.%d.%d%s\";\n", ma, mi, pa, sn); } \
' < $(ROOTDIR)/VERSION >> MaxVersion.java
	echo ' }' >> MaxVersion.java
	echo '}' >> MaxVersion.java

clean: local_clean
	(cd editors ; $(MAKE) clean)
	(cd fts ; $(MAKE) clean)
	(cd mda ; $(MAKE) clean)
	(cd tcl ; $(MAKE) clean)
	(cd toolkit ; $(MAKE) clean)
	(cd utils ; $(MAKE) clean)
	(cd widgets ; $(MAKE) clean)

include $(ROOTDIR)/java/Makefiles/Makefile.misc








