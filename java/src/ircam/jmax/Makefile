ROOTDIR = ../../../..
PACKAGE_DIR = ircam/jmax

include $(ROOTDIR)/java/Makefiles/Makefile.common

INCLUDE_PATH := $(JAVA_SRC_ROOT)/$(PACKAGE_DIR)
include Sources2

all:  
	(CLASSPATH=$(JMAX_CLASSPATH) ; export CLASSPATH ; javac $(JFLAGS) $(SOURCES))
	(cd editors/patcher ; $(MAKE) all)
.PHONY: all

MaxVersion.java: $(ROOTDIR)/VERSION
	echo '// DO NOT EDIT THIS FILE: it is generated automatically' > MaxVersion.java
	echo 'package ircam.jmax;' >> MaxVersion.java
	echo '' >> MaxVersion.java
	echo 'public class MaxVersion {' >> MaxVersion.java
	echo ' public static String getMaxVersion()' >> MaxVersion.java
	echo ' {' >> MaxVersion.java
	awk -F= '\
$$1=="MAJOR" {ma=$$2;} \
$$1=="MINOR" {mi=$$2;} \
$$1=="PATCH_LEVEL" {pa=$$2;} \
$$1=="SNAPSHOT"  {sn=$$2;} \
END { if ( sn!="") printf( "  return \"jMax version %d.%d.%d.%d\"\n", ma, mi, pa, sn); else printf( "  return \"jMax server version %d.%d.%d\"\n", ma, mi, pa); } \
' < $(ROOTDIR)/VERSION >> MaxVersion.java
	echo ' }' >> MaxVersion.java
	echo '}' >> MaxVersion.java

TestWindow:
	(CLASSPATH=$(JMAX_CLASSPATH) ; export CLASSPATH ; javac $(JFLAGS) -deprecation TestWindow.java)
.PHONY: TestWindow

MaxApplication:
	(CLASSPATH=$(JMAX_CLASSPATH) ; export CLASSPATH ; javac $(JFLAGS) MaxApplication.java)
.PHONY: MaxApplication

MaxEditor:
	(CLASSPATH=$(JMAX_CLASSPATH) ; export CLASSPATH ; javac $(JFLAGS) MaxEditor.java)
.PHONY: MaxEditor

MaxWhenHookTable:
	(CLASSPATH=$(JMAX_CLASSPATH) ; export CLASSPATH ; javac $(JFLAGS) MaxWhenHookTable.java)
.PHONY: MaxWhenHookTable

MaxWindowManager:
	(CLASSPATH=$(JMAX_CLASSPATH) ; export CLASSPATH ; javac $(JFLAGS) MaxWindowManager.java)
.PHONY: MaxWindowManager

MaxVersion:
	(CLASSPATH=$(JMAX_CLASSPATH) ; export CLASSPATH ; javac $(JFLAGS) MaxVersion.java)
.PHONY: MaxVersion

include $(ROOTDIR)/java/Makefiles/Makefile.misc








